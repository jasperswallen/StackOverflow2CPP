{
    "name": "StackOverflow to CPlusPlus.com",
    "version": "1.0",
    "description": "Changes the look of StackOverflow questions to CPlusPlus.com",
    "manifest_version": 2,
    "content_scripts": [
        {
            "css": [
                "styles.css"
            ],
            "matches": [
                "https://stackoverflow.com/*"
            ]
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "*://*/*"
    ]
}