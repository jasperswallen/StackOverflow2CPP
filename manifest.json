{
    "name": "StackOverflow to CPlusPlus.net",
    "version": "1.0",
    "description": "Changes the look of StackOverflow questions to CPP.net",
    "manifest_version": 2,

    "content_scripts": [{
        "css": ["styles.css"],
        "matches": ["https://stackoverflow.com/questions/*"]
    }],

    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "tabs",
        "*://*/*"
    ]
}
